@{
    ViewBag.Title = "Area Riservata";
}


<div class="lock-word animated fadeInDown row">
    <div class="col-md-12">
        <span class="text-center">AREA RISERVATA</span>
    </div>
    <div class="middle-box text-center lockscreen animated fadeInDown space-20">
        <div class="col-md-12">
            <div class="m-b-md">
                <img alt="image" class="img-circle circle-border" src="https://s3.amazonaws.com/uifaces/faces/twitter/ok/128.jpg">
            </div>
            <h3>Federico Koller</h3>
            @*<p>Your are in lock screen. Main app was shut down and you need to enter your passwor to go back to app.</p>*@

            @using (Html.BeginForm("Index", "AreaRiservata", FormMethod.Post, new { @class = "m-t", role = "form" }))
            {
                <div class="form-group">
                    <input type="password" name="pass" class="form-control" placeholder="******" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width">Accedi</button>
                if (ViewBag.Error != null && ViewBag.Error != "")
                {
                    <div class="row space-15">
                        <div class="col-md-12">
                            <div class="alert alert-danger text-center">
                                <p>
                                    @ViewBag.Error
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
